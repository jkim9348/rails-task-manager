<div class="container">
  <h1><%= @task.title %></h1>
  <%= link_to "Edit this task",  edit_task_path %>
  <div><%= @task.details %></div>

  <% if @task.completed == true %>
    <%= "This task is completed" %>
    <% else %>
    <%= "This has not been completed" %>
  <% end %>

  <div><%= link_to "Back to list", tasks_path %></div>
</div>
